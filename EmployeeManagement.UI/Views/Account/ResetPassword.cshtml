@model EmployeeManagement.Common.ViewModels.EmployeeAccountPasswordResetVM
@{
    Layout = "~/Views/Account/_LayoutAccount.cshtml";
}

<title>Şifre Unuttum</title>

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            @if (ViewBag.status == "success")
            {
                <style>
                    .card {
                        height: auto !important;
                        display: flex !important;
                        justify-content: center !important;
                    }

                    .alert {
                        margin-bottom: 0 !important;
                    }
                </style>
                <div class="alert alert-info">
                    Şifre yenileme linki e-posta adresinize gönderilmiştir. E-postanızı kontrol ediniz.
                </div>
            }
            else
            {
                <style>
                    .card {
                        height: auto !important;
                        padding: 10px !important;
                    }

                    .card-header {
                        text-align: center !important;
                    }

                    .submit-group {
                        display: flex !important;
                        justify-content: center !important;
                    }
                </style>
                <div class="card-header">
                    <h3>Şifre Unuttum</h3>
                    <hr />
                    <div class="alert alert-info">
                        Yeni şifre belirlemek için kayıtlı e-posta adresinizi yazınız.
                        Şifre değiştirme linkini e-posta adresinize göndereceğiz.
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input asp-for="Email" class="form-control" placeholder="Email Adresiniz" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Gönder" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>