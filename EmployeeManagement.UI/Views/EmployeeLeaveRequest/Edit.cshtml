@model EmployeeManagement.Common.ViewModels.EmployeeLeaveRequestVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .control-label {
        margin-right: 15px;
    }
</style>

<form class="form-horizontal" asp-action="Create">
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ApprovedStatus)

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="container">
        <div class="row">
            <label class="col-sm-3 control-label no-padding-right" asp-for="LeaveTypeText"> İzin Tipi</label>
            <div class='col-sm-4'>
                <div class="form-group">



                    @*<input asp-for="EmployeeLeaveTypeId" type="text" class="col-xs-10 col-sm-5" />
                        <span asp-validation-for="EmployeeLeaveTypeId"></span>*@
                    @Html.DropDownListFor(l => l.EmployeeLeaveTypeId, new SelectList(ViewBag.EmployeeLeaveTypes, "Id", "Name"), "Lütfen İzin Tipi Seçiniz",
                        new { @class = "form-control " })

                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 control-label no-padding-right" asp-for="StartDate"> İzin Başlangıç Tarihi</label>
            <div class='col-sm-4'>
                <div class="form-group">
                    <div class='input-group date'>
                        <input type='text' class="form-control" asp-for="StartDate" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 control-label no-padding-right" asp-for="EndDate"> İzin Bitiş Tarihi</label>
            <div class='col-sm-4'>
                <div class="form-group">
                    <div class='input-group date'>
                        <input type='text' class="form-control" asp-for="EndDate" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 control-label no-padding-right" asp-for="RequestComments"> İzin Talep Açıklama</label>
            <div class='col-sm-4'>
                <div class="form-group">
                    <div class='input-group' style=" width: 100%;">
                        <textarea class="form-control limeted" asp-for="RequestComments" maxlength="50"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"> </div>

            <div class='col-sm-4 text-center'>
                <input type="submit" value="Onaya Gönder" class="btn btn-info " />
            </div>
        </div>
    </div>


</form>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('.date').datetimepicker({

                format: 'DD/MM/YYYY'
            });
        });
    </script>
}
