@model EmployeeManagement.Common.ViewModels.EmployeeVM
@using Microsoft.AspNetCore.Http

@{
    var sessionVar = Context.Session.GetString(EmployeeManagement.Common.ConstantModels.Constant.LoginUserInfo);
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/4.5.0/css/font-awesome.min.css" />
    <style>
        a {
            color: #212529 !important;
            text-decoration: none !important;
            width: 100% !important;
        }

        .bg-secondary-me {
            background-color: #EFEFEF;
        }

        .arrow-me {
            position: absolute;
            right: 10px;
            top: 2px;
        }
    </style>
</head>
<body>
    @*@{
           string[] members = { "Jani", "Hege", "Kai", "Jim" };

        }*@


    <div class="container">
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="row justify-content-lg-center">
                    {@sessionVar[1]

                    }

                </div>
                <div class="row w-100 mt-4">
                    <a asp-controller="EmployeeAccount" asp-action="Index">
                        <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">

                            <div class="col-2">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="col-10 border-left">
                                Hesabım
                                <i class="fas fa-chevron-right arrow-me"></i>
                            </div>
                        </div>
                    </a>
                    <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                        <div class="col-2">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="col-10 border-left">
                            İşler
                            <i class="fas fa-chevron-right arrow-me"></i>
                        </div>
                    </div>
                    <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                        <div class="col-2">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="col-10 border-left">
                            Takvim
                            <i class="fas fa-chevron-right arrow-me"></i>
                        </div>
                    </div>
                    <a asp-controller="EmployeeLeaveRequest" asp-action="Index">
                        <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                            <div class="col-2">
                                <i class="fas fa-bed"></i>
                            </div>
                            <div class="col-10 border-left">
                                İzinler
                                <i class="fas fa-chevron-right arrow-me"></i>
                            </div>
                        </div>
                    </a>
                    <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                        <div class="col-2">
                            <i class="fas fa-plane-departure"></i>
                        </div>
                        <div class="col-10 border-left">
                            Seyehatler
                            <i class="fas fa-chevron-right arrow-me"></i>
                        </div>
                    </div>
                    <a asp-controller="EmployeeAccount" asp-action="EmployeeEdit">
                        <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                            <div class="col-2">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <div class="col-10 border-left">
                                Profil Güncelleme
                                <i class="fas fa-chevron-right arrow-me"></i>
                            </div>
                        </div>
                    </a>
                    <a asp-controller="EmployeeAccount" asp-action="PasswordChange">
                        <div class="d-flex w-100 mt-2 px-2 py-2 bg-secondary-me rounded ">
                            <div class="col-2">
                                <i class="fas fa-key"></i>
                            </div>
                            <div class="col-10 border-left">
                                Şifre Değiştirme
                                <i class="fas fa-chevron-right arrow-me"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-8"> @RenderBody()</div>
        </div>

    </div>
    
  
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/jquery-ui.custom.min.js"></script>
    <script src="~/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/js/jquery.easypiechart.min.js"></script>
    <script src="~/js/jquery.sparkline.index.min.js"></script>
    <script src="~/js/jquery.flot.min.js"></script>
    <script src="~/js/jquery.flot.pie.min.js"></script>
    <script src="~/js/jquery.flot.resize.min.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/jquery-mask/mask.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
